<%= stylesheet_link_tag "public/users", media: "all", 'data-turbolinks-track': 'reload' %>

<div class="wrapper-flex">
  <div class="wrapper-user">
    <div class="title-user">
      <h2>プロフィールの編集</h2>
    </div>
    <%= form_with model:@user, url: users_path, local: true do |f| %>
      <div class="user-form">
        <div class="user-image">
          <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_profile_image.jpeg" %>
          <%= f.attachment_field :profile_image %>
        </div>

        <div class="user-info">
          <div>
            <%= f.label      :nickname, "ニックネーム" %><br>
            <%= f.text_field :nickname %>
          </div>
          <div>
            <%= f.label     :introduction, "自己紹介" %><br>
            <%= f.text_area :introduction %>
          </div>
          <div>
            <%= f.label      :email, "メールアドレス" %><br>
            <%= f.text_field :email %>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "変更を保存" %>
      </div>
    <% end %>
    <%= link_to "退会する", users_unsubscribe_path, class: "btn-user" %>
  </div>
</div>

