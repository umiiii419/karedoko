<h4>検索</h4>
<%= search_form_for @q, url: shops_search_result_path do |f| %>
  <%= f.label        :name_or_name_kana_cont, "店名で探す" %>
  <%= f.search_field :name_or_name_kana_cont, placeholder: "店名を入力してください" %>

  <%= f.label             :address_or_nearest_station_cont, "エリアで探す" %>
  <%= f.search_field :address_or_nearest_station_cont, placeholder: "エリア・駅を入力してください" %>

  <%= f.label             :genre_id_eq, "ジャンル" %>
  <%= f.collection_select :genre_id_eq, Genre.all, :id, :name, include_blank: "指定なし" %>
  <br>
  <%= f.submit "検索" %>
<% end %>