<%= stylesheet_link_tag "public/search", media: "all", 'data-turbolinks-track': 'reload' %>

<div class="search_box">
  <%= search_form_for @q, url: shops_search_result_path do |f| %>
    <table class="search_table">
      <tr class="search_tr">
        <td class="search_td"><%= f.search_field      :name_or_name_kana_cont,               placeholder: "店名" %></td>
        <td class="search_td"><%= f.search_field      :address_or_nearest_station_cont,      placeholder: "エリア・駅" %></td>
        <td class="search_td"><%= f.collection_select :genre_id_eq, Genre.all, :id, :name,   include_blank: "ジャンルを選択" %></td>
        <td class="search_td"><%= f.submit "検索", class: "search_btn" %></td>
      </tr>
    </table>
  <% end %>
</div>
