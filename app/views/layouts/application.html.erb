<!DOCTYPE html>
<html>
  <head>
    <title>Karedoko</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= render partial: "public/header" %>
    <% elsif admin_signed_in? %>
      <%= render partial: "admins/header" %>
    <% else %>
      <%= link_to "新規登録(無料)", new_user_registration_path %>
      <%= link_to "ログイン",       new_user_session_path %></br>

      <%= link_to "トップ",     root_path %>
      <%= link_to "検索",       shops_path %>
      <%= link_to "ランキング", shops_rank_path %>
    <% end %>

    <%= yield %>
  </body>
</html>
