<h4>ジャンル新規登録・追加</h4>

<%= form_with model:@genre, url: admins_genres_path, local: true do |f| %>

  <%= f.label      :name, "ジャンル名" %>
  <%= f.text_field :name, placeholder: "ジャンル名" %>
  <%= f.submit "新規登録" %>
<% end %>

<h4>ジャンル一覧</h4>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集", edit_admins_genre_path(genre) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
